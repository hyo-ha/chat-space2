.chat-main
  .chat-main__group-info
    .chat-main__grup
      .group-name 
        = @group.name
      .member-list
        Memberï¼š
        %li.member
          - @group.users.each do |user|
            = user.name
    .edit-btn
      =link_to edit_group_path(@group.id) , class: "edit-btn__info" do
        Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    .Form
      = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
        .contents
          = f.text_field :content, class: 'inputcontent', placeholder: 'type a message' 
          = f.label :image, class: 'input-image' do
            = icon('far', 'image')
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'submit'