.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        %li.top-items__new-group
          =link_to new_group_path do
            = icon('fas', 'edit')
        %li.top-items__edit-user
          =link_to edit_user_path(current_user) do
            =icon('fas','cog')
  .group
    - current_user.groups.each do |group|
      .group-list
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message 
            = group.show_last_message